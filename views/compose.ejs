<%- include("partials/header") -%>
    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="mb-3">
            <label class="form-label" for="titleInput">Title</label>
            <input class="form-control" type="text" name="titleInput">
        </div><br>

        <div class="mb-3">
            <label class="form-label">Post</label>
            <textarea class="form-control" rows="5" cols="33" name="postInput"></textarea>
        </div><br>

        <button class="btn btn-info" type="submit" name="button">Publish</button>
    </form>

    <%- include("partials/footer") -%>