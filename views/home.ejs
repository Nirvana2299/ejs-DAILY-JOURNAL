<%- include('partials/header'); -%>
    <div>
        <h1>Home</h1>
        <p>
            <%= homeStartingContent %>
        </p>
        <button class="btn btn-info" onclick="location.href='/compose'">Compose</button>
    </div>
    <br>
    <div>
        <hr>
        <% posts.forEach((post)=> { %>
            <div>
                <div class="alert alert-info">
                    <h1 class="alert-heading">
                        <%= post.title %>
                    </h1>

                    <p>
                        <%= post.content.substring(0,100) + " ..." %>
                            <a class="alert-link" href="/posts/<%= post._id %>">Read More</a>
                    </p>
                </div>
                <form action="/delete" method="post">
                    <button type="submit" class="btn btn-outline-danger" name="delete" onclick="GFG_click(this.id)"
                        value="<%= post._id %>">Delete</button>
                </form>
            </div> 
            <br>
            <% }) %>
    </div>
    <%- include('partials/footer'); -%>